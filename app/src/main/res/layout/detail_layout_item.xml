<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDetailAtribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:padding="10dp"
            android:text="left" />

        <TextView
            android:id="@+id/tvDetailExparationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivDetailEdit"
            android:layout_toRightOf="@+id/tvDetailAtribute"
            android:clickable="true"
            android:gravity="center"
            android:text="center" />

        <ImageView
            android:id="@+id/ivDetailEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/ic_editor_border_color" />

    </RelativeLayout>

</RelativeLayout>


