<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new auto to existing"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etRegisrationNum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Car registration number" />

    <EditText
        android:id="@+id/etCurrentKm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Total mileage"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/etKmToNextService"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Km to next service"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/btnNextService"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="next service expiration date" />

    <Button
        android:id="@+id/btnInsurance"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="insurance expiration date" />

    <Button
        android:id="@+id/btnMotorCasco"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="motor casco expiration date" />


</LinearLayout>